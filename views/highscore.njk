{% extends "layout.njk" %}

{% block content %}
<main class="wrapper">
  <h1>{{ title }}</h1>
  <h2>Top 10 list</h2>

  <form method="get" action="/highscore">
    <fieldset>
      <ul>
        {% for game in games %}
        <li>
          <a href="/highscore/{{game.key}}" class="button"> {{ game.name }} </a>
        </li>
        {% endfor %}
      </ul>
  </form>
</main>
{% endblock %}